{
    "id": "mattermost-teamcity-plugin",
    "name": "Mattermost TeamCity Plugin",
    "description": "This plugin integrates Mattermost with TeamCity",
    "version": "0.3.0",
    "min_server_version": "5.18.0",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "Header: Configure your demo plugin settings below",
        "footer": "Footer: The code for this demo plugin can be found [here](https://github.com/mattermost/mattermost-plugin-demo)",
        "settings": [{
            "key": "TeamCityURL",
            "display_name": "TeamCity URL",
            "type": "text",
            "help_text": "The URL of your TeamCity Server",
            "placeholder": "http://127.0.0.1:8111/",
            "default": ""
        }, {
            "key": "TeamCityUsername",
            "display_name": "TeamCity Username",
            "type": "text",
            "help_text": "The username to access TeamCity with",
            "placeholder": "demo_plugin",
            "default": "demo_plugin"
        }, {
            "key": "TeamCityPassword",
            "display_name": "TeamCity Password",
            "type": "text",
            "help_text": "The password to access TeamCity with",
            "placeholder": "demo_plugin",
            "default": "demo_plugin"
        }]
    }
}
